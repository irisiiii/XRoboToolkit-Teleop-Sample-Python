<mujoco model="flexiv_rizon4s_scene">
  <include file="flexiv_Rizon4s.xml"/>

  <statistic center="0.3 0 0.3" extent="1.0" meansize="0.08"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.1 0.1 0.1" specular="0 0 0"/>
    <global azimuth="120" elevation="-20"/>
  </visual>

  <asset>
    <texture name="grid" type="2d" builtin="checker" rgb1=".2 .3 .4" rgb2=".1 0.15 0.2" width="512" height="512"
      mark="cross" markrgb=".8 .8 .8"/>
    <material name="grid" texture="grid" texrepeat="1 1" texuniform="true"/>
  </asset>

  <worldbody>
    <light pos="0 0 1.5" directional="true"/>
    <geom name="floor" size="1 1 0.01" type="plane" material="grid"/>
    <body name="target" pos="0.5 0.5 .5" quat="1 0 0 0" mocap="true">
      <!-- X-axis arrow shaft -->
      <geom name="target_x_shaft" type="cylinder" size="0.005 0.05" pos="0.05 0 0" zaxis="1 0 0" rgba="1 0 0 1" contype="0" conaffinity="0" group="1"/>
      <!-- Y-axis arrow shaft -->
      <geom name="target_y_shaft" type="cylinder" size="0.005 0.05" pos="0 0.05 0" zaxis="0 1 0" rgba="0 1 0 1" contype="0" conaffinity="0" group="1"/>
      <!-- Z-axis arrow shaft -->
      <geom name="target_z_shaft" type="cylinder" size="0.005 0.05" pos="0 0 0.05" zaxis="0 0 1" rgba="0 0 1 1" contype="0" conaffinity="0" group="1"/>
      <site type="sphere" size="0.01" rgba="0 0 1 1" group="1"/>
    </body>
    <!-- X-axis arrow shaft -->
    <geom name="world_x_shaft" type="cylinder" size="0.01 0.1" pos="0.1 0 0.0" zaxis="1 0 0" rgba="1 0 0 1" contype="0" conaffinity="0" group="1"/>
    <!-- Y-axis arrow shaft -->
    <geom name="world_y_shaft" type="cylinder" size="0.01 0.1" pos="0 0.1 0.0" zaxis="0 1 0" rgba="0 1 0 1" contype="0" conaffinity="0" group="1"/>
    <!-- Z-axis arrow shaft -->
    <geom name="world_z_shaft" type="cylinder" size="0.01 0.2" pos="0 0 0.2" zaxis="0 0 1" rgba="0 0 1 1" contype="0" conaffinity="0" group="1"/>
  </worldbody>
</mujoco>